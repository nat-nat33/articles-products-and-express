doctype
html
  head
    title #{title}
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:400,400italic,600,600italic,700,700italic,800,300italic,300' rel='stylesheet' type='text/css')
    link(rel="stylesheet" href="/css/styles.css")
  body
    div(id="content")
      h1 #{title}
        a(href="/products/new")
          button New!
        ul(id="list")
          each val in list
           li
              div(class="info")
                p Name: #{val.name}
                p Price: #{val.price}
                p Inventory: #{val.inventory}
              div(class="edit")
                a(class="editButton" href="/products/#{val.id}/edit")
                  button Edit
              div(class="delete")
                a(class="deleteButton" href="/products/#{val.id}")
                  button Delete
    script(type="text/javascript" src="/js/buttonEvents.js")